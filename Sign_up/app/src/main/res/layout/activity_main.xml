<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F7"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/naver" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="아이디"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_id"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:paddingRight="10dp"
                    android:gravity="center|right"
                    android:hint="@naver.com"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="비밀번호"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_pw"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:drawableRight="@drawable/lock"
                    android:paddingRight="10dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="비밀번호 재확인"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_pwcheck"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:drawableRight="@drawable/unlock"
                    android:paddingRight="10dp"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:includeFontPadding="false"
                    android:text="이름"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="생년월일"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_year"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="34dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint=" 년(4자)"
                        android:paddingLeft="7dp"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/edit_month"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="34dp"
                        android:background="@drawable/arrow_custom"
                        android:entries="@array/month"
                        android:paddingRight="10dp"/>

                    <EditText
                        android:id="@+id/edit_day"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint=" 일"
                        android:inputType="number"
                        android:paddingLeft="7dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="성별"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/edit_sex"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/arrow_custom"
                    android:entries="@array/sex" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="본인 확인 이메일"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="(선택)"
                    android:textColor="@color/material_dynamic_neutral80" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:hint="선택 입력"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="휴대전화"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/edit_code"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:entries="@array/country_code"
                    android:background="@drawable/arrow_custom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="전화번호 입력"
                    android:paddingLeft="10dp"
                    android:inputType="phone"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="131dp"
                    android:layout_height="63dp"
                    android:backgroundTint="#03C75A"
                    android:ems="10"
                    android:text="인증번호 받기"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextNumber2"
                    android:layout_width="370dp"
                    android:layout_height="45dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="인증번호를 입력하세요"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="400dp"
                    android:layout_height="63dp"
                    android:backgroundTint="#03C75A"
                    android:ems="10"
                    android:text="가입하기"
                    android:onClick="bt1"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="이용약관" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="|" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="개인정보처리방침" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="|" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="책임의 한계와 법적고지" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:text="|" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="회원정보 고객센터" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="ⓒ NAVER Crop." />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>